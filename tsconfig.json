{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@Knex/*": ["./src/databases/*"],
      "@Resolvers/*": ["./src/graphql/resolver/*"],
      "@GraphQL/*": ["./src/graphql/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@apollo",
      "./node_modules/@apollographql",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
